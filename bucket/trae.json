{
    "version": "2.3.10208",
    "description": "Trae (/treÉª/) is your helpful coding partner. It offers features like AI Q&A, code auto-completion, and agent-based AI programming capabilities. When developing projects with Trae, you can collaborate with AI to enhance your development efficiency.",
    "homepage": "https://www.trae.com.cn/",
    "license": {
        "identifier": "Proprietary",
        "url": "https://www.trae.com.cn/terms-of-service"
    },
    "depends": "extras/innounpacker",
    "architecture": {
        "64bit": {
            "url": "https://lf-cdn.trae.ai/obj/trae-ai-sg/pkg/app/releases/stable/2.3.10208/win32/Trae-Setup-x64.exe",
            "hash": "ee91224c68138092a0ba8a1fb28f5b89c3ddbcb2c6b68b177518c6cb3615c674"
        }
    },
    "pre_install": [
        "(Get-ChildItem $dir 'Trae*exe').Fullname | Rename-Item -NewName 'TraeSetup.exe'",
        "innounpack.exe -x -d\"$dir\" \"$dir\\TraeSetup.exe\" | Out-Null",
        "Move-Item -Force -Path \"$dir\\{app}\\tools\\*\" -Destination \"$dir\"",
        "Move-Item -Force -Path \"$dir\\{code_GetDestDir}\\*\" -Destination \"$dir\""
    ],
    "post_install": [
        "Remove-Item -Force -Path \"$dir\\{app}\" -Recurse",
        "Remove-Item -Force -Path \"$dir\\{code_GetDestDir}\" -Recurse",
        "Remove-Item -Force -Path \"$dir\\TraeSetup.exe\" -Recurse",
        "if (!(Test-Path \"$dir\\data\\extensions\") -and (Test-Path \"$env:USERPROFILE\\.trae\\extensions\")) {",
        "    info '[Portable Mode] Copying extensions...'",
        "    Copy-Item \"$env:USERPROFILE\\.trae\\extensions\" \"$dir\\data\" -Recurse",
        "}",
        "if (!(Test-Path \"$dir\\data\\user-data\") -and (Test-Path \"$env:AppData\\Trae\")) {",
        "    info '[Portable Mode] Copying user data...'",
        "    Copy-Item \"$env:AppData\\Trae\" \"$dir\\data\\user-data\" -Recurse",
        "}",
        "$extensions_file = \"$dir\\data\\extensions\\extensions.json\"",
        "if ((Test-Path \"$extensions_file\")) {",
        "    info 'Adjusting path in extensions file...'",
        "    (Get-Content \"$extensions_file\") -replace '(?<=trae(/|\\\\\\\\)).*?(?=(/|\\\\\\\\)data(/|\\\\\\\\)extensions)', $version | Set-Content \"$extensions_file\"",
        "}"
    ],
    "shortcuts": [
        [
            "Trae.exe",
            "Trae",
            "--user-data-dir=\"$dir\\data\\user-data\" --extensions-dir=\"$dir\\data\\extensions\""
        ]
    ],
    "persist": "data",
    "checkver": {
        "script": [
            ". \"$pwd\\bin\\utils.ps1\"",
            "$dl_info = get_installer_info 'ByteDance/Trae'",
            "\"$($dl_info.x64_exe.InstallerUrl);\""
        ],
        "regex": "(?<version>\\d+\\.\\d+\\.\\d+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://lf-cdn.trae.ai/obj/trae-ai-sg/pkg/app/releases/stable/$version/win32/Trae-Setup-x64.exe",
                "hash": {
                    "url": "https://raw.githubusercontent.com/microsoft/winget-pkgs/master/manifests/b/ByteDance/Trae/$version/ByteDance.Trae.CN.installer.yaml",
                    "regex": "Architecture: x64[\\s\\S]+?InstallerSha256:\\s?(.+)"
                }
            }
        }
    }
}
